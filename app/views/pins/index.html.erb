<main class="mb-4">
  <div class="container">
    <h1 class="text-center p-3 mb-5 border border-top-0 border-left-0 border-right-0">
    <% if @query.nil? || @query.empty? %>
      All Pins
    <% else %>
      Results for "<%= @query %>"
    <% end %>
    </h1>
    <% if @pins.any? %>
      <div class="container d-flex flex-wrap align-items-center">
        <% @pins.each do |pin| %>
          <%= render(partial: 'pin_card', locals: { pin: pin }) %>
        <% end %>
      </div>
    <% else %>
      <p class="h3 text-center text-danger mb-5">No result found!...</p>
    <% end %>
  </div>
</main>