<main class="mb-4">
  <div class="container border rounded w-50">
    <h1 class="text-center p-3 mb-5 border border-top-0 border-left-0 border-right-0">Edit Pinned image</h1>
    <% if @pin.errors.any? %>
      <div class="row justify-content-center">
        <div class="alert alert-danger col-sm-11" role="alert">
          <%= @pin.errors.full_messages.join('<br />').html_safe %>
        </div>
      </div>
    <% end %>
    <%= form_for(@pin) do |form| %>
      <div class="form-group row justify-content-center">
        <%= form.label(:title, class: 'col-sm-2 col-form-label pl-0') %>
        <%= form.text_field(:title, class: 'form-control col-sm-9', placeholder: 'E.g. Image of a cat', required: true) %>
      </div>
      <div class="form-group row justify-content-center">
        <%= form.label(:image_url, class: 'col-sm-2 col-form-label pl-0') %>
        <%= form.text_field(:image_url, class: 'form-control col-sm-9', placeholder: 'E.g. https://catsite.cat/image.jpeg', required: true) %>
      </div>
      <div class="form-group row justify-content-center">
        <%= form.label(:tag, class: 'col-sm-2 col-form-label pl-0') %>
        <%= form.text_field(:tag, class: 'form-control col-sm-9', placeholder: 'E.g. Animal') %>
      </div>
      <div class="form-group row justify-content-center">
        <%= form.submit(class: 'btn btn-primary col-sm-11') %>
      </div>
    <% end %>
  </div>
</main>