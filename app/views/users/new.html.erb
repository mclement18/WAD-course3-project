<main class="mb-4">
  <div class="container border rounded w-50">
    <h1 class="text-center p-3 mb-5 border border-top-0 border-left-0 border-right-0">Log in / Register</h1>
    <% if @user.errors.any? %>
      <div class="row justify-content-center">
        <div class="alert alert-danger col-sm-11" role="alert">
          <%= @user.errors.full_messages.join('<br />') %>
        </div>
      </div>
    <% end %>
    <%= form_for(@user) do |form| %>
      <div class="form-group row justify-content-center">
        <%= form.label(:email, class: 'col-sm-2 col-form-label pl-0') %>
        <%= form.email_field(:email, class: 'form-control col-sm-9', placeholder: 'example@email.com', required: true) %>
      </div>
      <div class="form-group row justify-content-center">
        <%= form.submit('Submit', class: 'btn btn-primary col-sm-11') %>
      </div>
    <% end %>
  </div>
</main>