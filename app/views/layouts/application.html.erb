<!DOCTYPE html>
<html>
  <head>
    <title>PinYourImageApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <%= link_to('Pin Your Images', '#', class: 'navbar-brand') %>

        <div class="navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to('About', about_index_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('Log in / Register', '#', class: 'nav-link') %>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-dark my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark py-5">
        <%= link_to('Pin Your Images', '#', class: 'navbar-brand') %>

        <div class="navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to('Back to Top', '#top', class: 'nav-link') %>
            </li>
          </ul>
        </div>
      </div>
    </footer>
    
  </body>
</html>
