<!DOCTYPE html>
<html>
  <head>
    <title>PinYourImageApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <%= link_to('Pin Your Images', root_path, class: 'navbar-brand') %>

        <div class="navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to('About', about_index_path, class: 'nav-link') %>
            </li>
            <% if @user_logged_in %>
              <li class="nav-item">
                <%= link_to('My PinBoard', user_pinboard_pins_path(@user), class: 'nav-link') %>
              </li>
              <li class="nav-item">
                <%= link_to('Create Pin', new_pin_path, class: 'nav-link') %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to('Log in / Register', new_user_path, class: 'nav-link') %>
              </li>
            <% end %>
          </ul>
          <%= render(partial: 'nav_search_bar') %>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark py-5">
        <%= link_to('Pin Your Images', root_path, class: 'navbar-brand') %>

        <div class="navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to('Back to Top', '#top', class: 'nav-link') %>
            </li>
          </ul>
        </div>
      </div>
    </footer>
    
  </body>
</html>
